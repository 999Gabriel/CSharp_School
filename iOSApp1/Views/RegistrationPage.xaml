<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iOSApp1.Views.RegistrationPage"
             Title="Registration">
    
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Label Text="User Registration" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <Entry x:Name="FirstNameEntry" Placeholder="First Name" />
            <Entry x:Name="LastNameEntry" Placeholder="Last Name" />
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
            
            <Label Text="Date of Birth" FontSize="14" TextColor="Gray"/>
            <DatePicker x:Name="DobPicker" />

            <Button Text="Register" Clicked="OnRegisterClicked" Margin="0,20,0,0"/>

            <Frame BackgroundColor="#F0F0F0" 
                   BorderColor="Gray" 
                   CornerRadius="5" 
                   Padding="10" 
                   IsVisible="False"
                   x:Name="ResultFrame">
                <Label x:Name="ResultLabel" TextColor="Black" />
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>