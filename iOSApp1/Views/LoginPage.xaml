<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iOSApp1.Views.LoginPage"
             Title="Login">
    
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20" VerticalOptions="Center">
            <Label Text="Welcome Back" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   Margin="0,0,0,20"/>

            <Label Text="Please login to your account" 
                   FontSize="14" 
                   TextColor="Gray"
                   HorizontalOptions="Center" 
                   Margin="0,0,0,30"/>

            <Entry Text="{Binding Email}" 
                   Placeholder="Email" 
                   Keyboard="Email" />
            
            <Entry Text="{Binding Password}" 
                   Placeholder="Password" 
                   IsPassword="True" />

            <Button Text="Login" 
                    Command="{Binding LoginCommand}"
                    Margin="0,20,0,0"
                    BackgroundColor="#007ACC"
                    TextColor="White"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,10,0,0">
                <Label Text="Don't have an account?" 
                       FontSize="14" 
                       TextColor="Gray"/>
                <Label Text="Register" 
                       FontSize="14" 
                       TextColor="#007ACC"
                       TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToRegisterCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

            <Frame BackgroundColor="#F0F0F0" 
                   BorderColor="Gray" 
                   CornerRadius="5" 
                   Padding="10" 
                   IsVisible="{Binding IsResultVisible}"
                   >
                <Label Text="{Binding StatusMessage}" TextColor="{Binding StatusColor}" />
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
